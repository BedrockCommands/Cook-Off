{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.bcc.cook.movement": {
			"initial_state": "idle",
			"states": {
				"idle": {
					"transitions": [
						{
							"moving": "query.modified_move_speed > 0.15"
						}
					]
				},
				"moving": {
					"animations": [
						"bcc.cook.move.legs",
						{
							"bcc.cook.move.arms": "!query.is_selected_item && !variable.custom_hold_animation"
						},
						{
							"bcc.cook.move.arms.with_item": "query.is_selected_item && !variable.custom_hold_animation"
						}
					],
					"transitions": [
						{
							"idle": "query.modified_move_speed <= 0.15"
						}
					]
				}
			}
		}
	}
}