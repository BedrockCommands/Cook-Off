{
    "format_version": "1.10.0",
    "animation_controllers": {
        "controller.animation.bcc.cook.movement": {
            "initial_state": "idle",
            "states": {
                "idle": {
                    "transitions": [
                        {
                            "moving": "query.modified_move_speed > 0.15"
                        }
                    ],
                    "blend_transition": 0.3
                },
                "moving": {
                    "animations": [
                        "bcc.cook.move.legs",
                        {
                            "bcc.cook.move.arms": "!query.is_selected_item && !variable.custom_hold_animation"
                        },
                        {
                            "bcc.cook.move.arms.with_item": "query.is_selected_item && !variable.custom_hold_animation"
                        }
                    ],
                    "transitions": [
                        {
                            "idle": "query.modified_move_speed <= 0.15"
                        },
                        {
                            "running": "query.is_sprinting"
                        }
                    ],
                    "blend_transition": 0.3
                },
                "running": {
                    "animations": [
                        "bcc.cook.run.legs",
                        {
                            "bcc.cook.run.arms": "!query.is_selected_item && !variable.custom_hold_animation"
                        },
                        {
                            "bcc.cook.run.arms.with_item": "query.is_selected_item && !variable.custom_hold_animation"
                        }
                    ],
                    "transitions": [
                        {
                            "moving": "!query.is_sprinting"
                        }
                    ],
                    "blend_transition": 0.3
                }
            }
        }
    }
}
