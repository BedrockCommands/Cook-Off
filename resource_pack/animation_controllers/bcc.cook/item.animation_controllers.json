{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.bcc.cook.item": {
			"initial_state": "none",
			"states": {
				"none": {
					"transitions": [
						{
							"fire_extinguisher": "query.is_item_name_any('slot.weapon.mainhand', 'bcc.cook:fire_extinguisher')"
						},
						{
							"plate": "query.is_item_name_any('slot.weapon.mainhand', 'bcc.cook:plate')"
						}
					]
				},
				"fire_extinguisher": {
					"animations": [
						{
							"bcc.cook.fire_extinguisher.hold": "!variable.using"
						},
						{
							"bcc.cook.fire_extinguisher.use": "variable.using"
						}
					],
					"variables": {
						"using": {
							"input": "( variable.use_item_interval_progress > 0.0 ) || ( variable.use_item_startup_progress > 0.0 )"
						}
					},
					"transitions": [
						{
							"none": "!query.is_item_name_any('slot.weapon.mainhand', 'bcc.cook:fire_extinguisher')"
						}
					]
				},
				"plate": {
					"animations": [
						"bcc.cook.plate.hold"
					],
					"transitions": [
						{
							"none": "!query.is_item_name_any('slot.weapon.mainhand', 'bcc.cook:plate')"
						}
					]
				}
			}
		}
	}
}